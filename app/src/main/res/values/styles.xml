<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#cbcbcb</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:textSize">42dp</item>
    </style>

    <style name="Title.less" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#2d2d2d</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>
